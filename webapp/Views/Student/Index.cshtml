@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using webapp.Models

<style>
    td {
        border: 1px solid black;
    }

    tr {
        border: 1px solid black;
    }
</style>


<table style="border: 1px solid black">
    <tr>     
        <td>ID</td>
        <td>Name</td>
        <td>Gender</td>
        <td>DepartmentName</td>
        <td>Dob</td>
        <td>Gpa</td>
        <td></td>
        <td></td>
    </tr>

    @foreach (Student s in ViewBag.student)
    {
        <tr>
            <td>@s.Id</td>
            <td>@s.Name</td>
            <td>
                <select name="gd">
                    @if (s.Gender == true)
                    {
                        <option value="1" selected>Male</option>
                        <option value="0"> Female</option>
                    }
                    else
                    {
                        <option value="1">Male</option>
                        <option value="0" selected> Female</option>
                    }
            </select>
            </td>


            <td>
                <select name="department">
                    @foreach (Department d in ViewBag.depart)
                    {
                        @if (d.Name == s.DepartId)
                        {
                            <option value="@d.Id" selected>@d.Name</option>
                        }
                        else
                        {
                            <option value="@d.Id">@d.Name</option>

                        }
                    }
                </select>
            </td>
            <td>@s.Dob</td>
            <td>@s.Gpa</td>
            <td><a href="/Student/delete?id=@s.Id&type=0">Update</a></td>
            <td><a href="/Student/delete?id=@s.Id&type=1">Delete</a></td>
        </tr>
    }
    
    <form asp-action="add" asp-controller="Student" method="post">
        <table>
            <tr>
                <td>ID</td>
                <td><input type="text" name="id" required/></td>
            </tr>
            <tr>
                <td>Name</td>
                <td><input type="text" name="name" required /></td>
            </tr>
            <tr>
                <td>Gender</td>
                <td>
                    <select name="gd">
                        <option value="1">Male</option>
                        <option value="0">Female</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Department</td>
                <td>
                    <select name="departid">
                        @foreach (Department d in ViewBag.depart)
                        {
                            <option value="@d.Id">@d.Name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>DOB</td>
                <td><input type="date" name="dob" required /></td>
            </tr>
            <tr>
                <td>GPA</td>
                <td><input type="text" name="gpa" required /></td>
            </tr>                           
        </table><br/>
        <input type="submit" value="Add"/>
    </form>
    

</table>
