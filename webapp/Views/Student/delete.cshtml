@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using webapp.Models

<form asp-action="delete" asp-controller="Student" method="post">
    <table>
        <tr>
            <td>ID</td>
            <td><input type="text" name="id" value="@ViewBag.student.Id" readonly /></td>
        </tr>
        <tr>
            <td>Name</td>
            <td><input type="text" name="name" value="@ViewBag.student.Name" required /></td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>                
                <select name="gd">
                    @if (@ViewBag.student.Gender == true)
                    {
                        <option value="1" selected>Male</option>
                        <option value="0">Female</option>
                    }
                    else
                    {
                        <option value="1">Male</option>
                        <option value="0" selected>Female</option>
                    }

                </select>
            </td>
        </tr>
        <tr>
            <td>Department</td>
            <td>
                <select name="departid">
                    @foreach (Department d in ViewBag.depart)
                    {
                        @if (ViewBag.student.DepartId == d.Id)
                        {
                            <option value="@d.Id" selected>@d.Name</option>
                        }
                        else
                        {
                            <option value="@d.Id">@d.Name</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>DOB</td>
            <td><input type="datetime" name="dob" value="@ViewBag.student.Dob"  required /></td>
        </tr>
        <tr>
            <td>GPA</td>
            <td><input type="text" name="gpa" value="@ViewBag.student.Gpa" required /></td>
        </tr>
    </table><br />
    <input type="submit" value="Update" />
</form>
